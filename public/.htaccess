# Disable directory browsing
Options -Indexes

# ----------------------------------------------------------------------
# Rewrite engine
# ----------------------------------------------------------------------
<IfModule mod_rewrite.c>
    # Enable rewriting and follow symlinks
    Options +FollowSymlinks
    RewriteEngine On

    # Base URL (si lo tienes en un subdirectorio, ajústalo; por defecto es /)
    RewriteBase /

    # Envía todas las peticiones que no sean archivos o carpetas reales a index.php
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ index.php/$1 [L]

    # Asegura que la cabecera Authorization se pase correctamente (para APIs, JWT, etc.)
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]
</IfModule>

# Si no hay mod_rewrite, envía los 404 a index.php (CodeIgniter los maneja internamente)
<IfModule !mod_rewrite.c>
    ErrorDocument 404 index.php
</IfModule>

# Oculta la versión del servidor
ServerSignature Off
